{
  "name": "cwb-graphql",
  "version": "1.1.0",
  "main": "index.js",
  "repository": "https://github.com/cettoana/cwb-graphql.git",
  "author": "Hau Chen <cettoana@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "start": "node dist/index.js",
    "build": "rm -rf ./dist && tsc",
    "heroku-postbuild": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.2.1",
    "apollo-server": "^2.3.1",
    "apollo-server-testing": "^2.3.1",
    "dotenv": "^6.2.0",
    "graphql": "^14.0.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "@types/graphql": "14.0.5",
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "husky": "1.3.0",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.16.4",
    "ts-jest": "23.10.5",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.2.2"
  },
  "engines": {
    "node": ">=8.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "src/__tests__/data/",
      "src/__tests__/helpers/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
